#include "main.h"

/**
 * string_toupper - Task 5. A function that changes 
 * all lowercase letters of a  string to upper case
 * @s: given string parameter
 * Return: char pointer at the start of the converted string
 */

char *string_toupper(char *s)
{
	char *startingPointer = s;

	while (*s)
	{
		if (*s >= 'a' && *s <= 'z')
			*s -= 32;
		s++;
	}
	return (startingPointer);
}
