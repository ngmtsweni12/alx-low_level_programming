#include "main.h"

/**
 * reverse_array - Task 4. A function that reverse an array.
 * @a: given array parameter
 * @n: number of elements of array parameter
 * Return: void
 */

void reverse_array(int *a, int n)
{
	int i = 0;
	int reversed;

	while (i < n--)
	{
		reversed = a[i];
		a[i++] = a[n];
		a[n] = reversed;
	}
}
